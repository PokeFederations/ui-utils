{
    "compilerOptions": {
      "baseUrl": "src",
      "outDir": "./dist/",
      "noImplicitAny": true,
      "target": "es5",
      "jsx": "react",
      "allowJs": false,
      "sourceMap": true,
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "src/**/*"
    ],
  }